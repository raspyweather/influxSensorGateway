{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",
    "moduleResolution": "Node",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
"include": [
  "src/**/*.ts"
]}